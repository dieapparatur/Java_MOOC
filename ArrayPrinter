
public class ArrayPrinter {
    public static void main(String[] args) {

        int[] array = {5, 1, 3, 4, 2};

        printNeatly(array);
    }

    public static void printNeatly(int[] refArray) {
        int sizeChecker = 0;

        for (int i = 0; i < (refArray.length - 1); i++) {
            System.out.print(refArray[i] + ", ");
            sizeChecker++;
        }

        System.out.print(refArray[sizeChecker]);
        
    }
}
